
<% CSV.foreach "/media/tbellxxsa0021_email.prn"  do |row| %>
	<% if @header && row.count == 13 %>
		<table class="table table-stripped">
			<thead>
				<tr class="bg-danger">
					<% row.each do |column| %>
						<td class="text-right"><%= column %></td>
					<% end %>
				</tr>
			</thead>
			<tbody>
			<% @header = false %>
	<% elsif !@header && @sub_header && row.count == 13 %>
			<tr class="bg-danger">
				<% row.each do |column| %>
					<td class="text-right"><%= column %></td>
				<% end %>
			</tr>
		</thead>
		<tbody>

		<% @sub_header = false %>
	<% elsif !@header && row.count == 13 %>
		<tr>
			<% row.each do |column| %>
				<td class="text-right"><%= column.match(/\d+/).nil? ? column : column.to_i %></td>
			<% end %>
		</tr>
	<% elsif !@header && row.count == 5 %>
				<tr class="bg-info">
					<td class="text-right"><%= row[0] %></td>
					<td colspan="2"></td>
					<td class="text-right"><%= number_to_currency(row[1].to_i) %></td>
					<td colspan="2"></td>
					<td class="text-right"><%= number_to_currency(row[2].to_i) %></td>
					<td colspan="2"></td>
					<td class="text-right"><%= number_to_currency(row[3].to_i) %></td>
					<td colspan="2"></td>
					<td class="text-right"><%= number_to_currency(row[4].to_i) %></td>
				</tr>
			</tbody>
		</table>
		<% @header = true %>
	<% elsif @header && row.count == 2 %>
		<table class="table table-stripped">
			<thead>
				<tr>
					<td colspan="13" class="text-center bg-success"><%= row[1] %></td>
				</tr>

		<% @sub_header = true %>
		<% @header = false %>
	<% elsif !@header && row.count == 2 %>
			</tbody>
		</table>
		<table class="table table-stripped">
			<thead>
				<tr>
					<td colspan="13" class="text-center bg-success"><%= row[1] %></td>
				</tr>
			</thead>
			<tbody>
			<% @sub_header = true %>
	<% end %>


	<% @counter += 1 %>
<% end %>
