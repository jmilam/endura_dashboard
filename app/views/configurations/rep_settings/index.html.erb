<script type="text/javascript">
	$(document).ready(function(){
		$('#sales_rep_name').focus();
	});
</script>

<div class="container">

	<table class="table table" id="tsmTable">
		<thead>
			<tr>
				<th colspan=5><%= link_to "<< Back", configurations_management_overview_index_path %></th>
			</tr>
			<tr>
				<th class="text-center active" colspan=5><%= @header %></th>
			</tr>
		</thead>
		<tbody>
			<% @sales_reps.each do |rep| %>
				<tr>
					<td><%= rep.name %></td>
					<td><%= rep.personnel_count %></td>
					<td><%= rep.tsm.name %></td>
					<td><div class="pull-right"><%= link_to "Edit", "#", class: "edit_tsm" %> | <%= link_to "Delete", configurations_rep_setting_path(id: rep.id), data: {confirm: 'Are you sure you want to delete this tsm?'}, method: :delete %></div></td>
					<td><%= hidden_field_tag :rep_id, rep.id %></td>
				</tr>
			<% end %>
			<tr>
				<%= form_for :sales_rep, method: :create do |f| %>

					<td><%= f.text_field :name, class: "form-control", placeholder: "Enter Rep Name" %></td>
					<td><%= f.text_field :personnel_count, class: "form-control", placeholder: "Enter Personnel Amt." %></td>
					<td><%= select :sales_rep, :tsm_id, @tsms, {prompt: "Select Rep TSM.."}, {class: "form-control"} %></td>					
					<td><%= f.submit "Add Sales Rep", class: "btn btn-sm btn-success pull-right" %></td>
					<td/>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>