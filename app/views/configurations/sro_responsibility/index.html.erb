<div class="container">

	<table class="table table" id="tsmTable">
		<thead>
			<tr>
				<th colspan=5><%= link_to "<< Back", configurations_management_overview_index_path %></th>
			</tr>
			<tr>
				<th class="text-center active" colspan=5><%= @header %></th>
			</tr>
		</thead>
		<tbody>
			<% @responsibilities.each do |r| %>
				<tr>
					<td colspan=4><%= r.name %></td>
					<td><div class="pull-right"><%= link_to "Edit", "#", class: "edit_responsibility" %> | <%= link_to "Delete",configurations_sro_responsibility_index_path(id: r.id), data: {confirm: 'Are you sure you want to delete this responsibility?'}, method: :delete %></div></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>