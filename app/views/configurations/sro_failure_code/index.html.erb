<div class="container">

	<table class="table table" id="tsmTable">
		<thead>
			<tr>
				<th colspan=5><%= link_to "<< Back", configurations_management_overview_index_path %></th>
			</tr>
			<tr>
				<th class="text-center active" colspan=5><%= @header %></th>
			</tr>
		</thead>
		<tbody>
			<% @failure_codes.each do |fc| %>
				<tr>
					<td colspan=4><%= fc.name %></td>
					<td><div class="pull-right"><%= link_to "Edit", "#", class: "edit_failure_code" %> | <%= link_to "Delete",configurations_sro_failure_code_index_path(id: fc.id), data: {confirm: 'Are you sure you want to delete this failure code?'}, method: :delete %></div></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>