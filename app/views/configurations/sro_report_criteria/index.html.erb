<script type="text/javascript">
	$(document).ready(function(){
			$('#responsibility_name').focus();
			editSingleFieldForm("report_criteria", "Edit Report Criteria", "reportCriteriaEditBtn", "sro_report_criteria");
		});
</script>
<div class="container">
	<table class="table table" id="tsmTable">
		<thead>
			<tr>
				<th colspan=3><%= link_to "<< Back", configurations_management_overview_index_path %></th>
			</tr>
			<tr>
				<th colspan=3 class="text-center active"><%= @header %></th>
			</tr>
		</thead>
		<tbody>
			<% @report_criterias.each do |rc| %>
				<tr>
					<td ><%= rc.criteria %></td>
					<td><div class="pull-right"><%= link_to "Edit", "#", class: "edit_report_criteria" %> | <%= link_to "Delete",configurations_sro_report_criterium_path(id: rc.id), data: {confirm: 'Are you sure you want to delete this report criteria?'}, method: :delete %></div></td>
					<td><%= hidden_field_tag :report_criteria_id, rc.id %></td>
				</tr>
			<% end %>
			<tr>
				<%= render partial: 'configurations/form_partials/new_single_form', locals: {form_name: :report_criteria, btn_text: "Add Report Criteria", form_placeholder: "Enter Report Criteria Description"}%>
			</tr>
		</tbody>
	</table>
</div>