<script type="text/javascript">
	$(document).ready(function(){
			$('#failure_code_name').focus();
			editDoubleFieldForm("quarter", "Edit Quarter Data", "quarterEditBtn", "annual_quarter")
		});
</script>
<div class="container">
	<table class="table table" id="quarterTable">
		<thead>
			<tr>
				<th colspan=5><%= link_to "<< Back", configurations_management_overview_index_path %></th>
			</tr>
			<tr>
				<th class="text-center active" colspan=5><%= @header %></th>
			</tr>
			<tr>
				<th># of Weeks in Quarter</th>
				<th>Quarter</th>
				<th colspan=2></th>
			</tr>
		</thead>
		<tbody>
			<% @quarter_weeks.each do |quarter| %>
				<tr>
					<td><%= quarter.week_count %></td>
					<td>Q<%= quarter.quarter %></td>
					<td><div class="pull-right"><%= link_to "Edit", "#", class: "edit_quarter" %> | <%= link_to "Delete", configurations_annual_quarter_path(id: quarter.id), data: {confirm: 'Are you sure you want to delete this tsm?'}, method: :delete %></div></td>
					<td><%= hidden_field_tag :quarter_id, quarter.id %></td>
				</tr>
			<% end %>

			<tr>
				<%= render partial: 'configurations/form_partials/new_double_form', locals: {form_name: :week_quarter_counts, btn_text: "Add Quarter", form_placeholder: "Enter Number of Weeks in Quarter..", field_id: :quarter_id, field_name: :quarter}, assigns: {select_box_data: @select_box_data, select_placeholder: @select_placeholder} %>
			</tr>
		</tbody>
	</table>
</div>